<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Update">

    <select id="getMatchingFiles" parameterType="Map" resultType="String">
        SELECT DISTINCT filename
        FROM ${destinationTableName}
        WHERE ${condition}
    </select>

    <update id="update" parameterType="Map">
        SELECT
            *
            <foreach  collection="updateDataMap"  index="key" item="value"  open=" REPLACE("  separator=", "  close=")">
                CASE
                    WHEN ${condition} THEN ${value}
                    ELSE ${key}
                END AS ${key}
            </foreach>
        FROM ${destinationTableWithMatchingFiles}
    </update>
</mapper>
